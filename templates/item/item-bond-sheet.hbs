<form class='{{cssClass}}' autocomplete='off'>
  <header class='sheet-header'>
    <img
      class='profile-img'
      src='{{item.img}}'
      data-edit='img'
      title='{{item.name}}'
    />
    <div class='header-fields'>
      <h1 class='charname'><input
          name='name'
          type='text'
          value='{{item.name}}'
          placeholder='Name'
        /></h1>
      <div class='grid grid-2col'>
        <div class='resource-text grid-span-2'>
          <label class='resource-label'>{{localize "TC.Labels.Assocperson"}}</label>
          <input
            type='text'
            name='system.person'
            value='{{system.person}}'
            data-dtype='String'
          />
        </div>
        <div class='resource-text'>
          <label class='resource-label'>{{localize "TC.Labels.Duration"}}</label>
          <input
            type='text'
            name='system.duration'
            value='{{system.duration}}'
            data-dtype='String'
          />
        </div>
        <div class='resource'>
          <label class='resource-label'>{{localize "TC.Labels.Successes"}}</label>
          <input
            type='text'
            class="text-3digit"
            name='system.successes'
            value='{{system.successes}}'
            data-dtype='Number'
          />
        </div>
        <div class='resource-text grid-span-2'>
          <label class='resource-label'>{{localize "TC.Labels.Diceroll"}}</label>
          <input
            type='text'
            name='system.diceroll'
            value='{{system.diceroll}}'
            data-dtype='String'
          />
        </div>
      </div>
    </div>
  </header>

  {{! Sheet Tab Navigation }}
  <nav class='sheet-tabs tabs' data-group='primary'>
    <a class='item' data-tab='description'>{{localize "TC.Labels.Action"}}</a>
    <a class='item' data-tab='feature'>{{localize "TC.Labels.Feature"}}</a>
    <a class='item' data-tab='drawback'>{{localize "TC.Labels.Drawback"}}</a>
    <a class='item' data-tab='attributes'>{{localize "TC.Labels.Game"}}</a>
  </nav>

  {{! Sheet Body }}
  <section class='sheet-body'>
    {{! Action Tab }}
    <div class='tab description' data-group='primary' data-tab='description'>
      {{! Editors must receive enriched text data from getData to properly handle rolls }}
      {{editor
        enrichedDescription
        target='system.action'
        engine='prosemirror'
        button=false
        editable=true
      }}
    </div>

    {{! Feature Tab }}
    <div class='tab feature' data-group='primary' data-tab='feature'>
      {{! Editors must receive enriched text data from getData to properly handle rolls }}
      {{editor
        enrichedDescription
        target='system.feature'
        engine='prosemirror'
        button=false
        editable=true
      }}
    </div>
    

    {{! Drawback Tab }}
    <div class='tab drawback' data-group='primary' data-tab='drawback'>
      {{! Editors must receive enriched text data from getData to properly handle rolls }}
      {{editor
        enrichedDescription
        target='system.drawback'
        engine='prosemirror'
        button=false
        editable=true
      }}
    </div>

    {{! Attributes Tab }}
    <div class='tab attributes' data-group='primary' data-tab='attributes'>
      {{! As you add new fields, add them in here! }}
      {{> "systems/trinity-continuum/templates/item/parts/item-attributes.hbs"}}
    </div>
  </section>
</form>