<form class='{{cssClass}}' autocomplete='off'>
  <header class='sheet-header'>
    <img
      class='profile-img'
      src='{{item.img}}'
      data-edit='img'
      title='{{item.name}}'
    />
    <div class='header-fields'>
      <h1 class='charname'><input
          name='name'
          type='text'
          value='{{item.name}}'
          placeholder='Name'
        /></h1>
      <div class='grid grid-2col'>
        <div class='resource-text grid-span-2'>
          <label class='resource-label'>{{localize "TRINITY_SECOND.SheetLabels.Assocperson"}}</label>
          <input
            type='text'
            name='system.person'
            value='{{system.person}}'
            data-dtype='String'
          />
        </div>
        <div class='resource-text'>
          <label class='resource-label'>{{localize "TRINITY_SECOND.SheetLabels.Duration"}}</label>
          <input
            type='text'
            name='system.duration'
            value='{{system.duration}}'
            data-dtype='String'
          />
        </div>
        <div class='resource-text'>
          <label class='resource-label'>{{localize "TRINITY_SECOND.SheetLabels.Diceroll"}}</label>
          <input
            type='text'
            name='system.diceroll'
            value='{{system.diceroll}}'
            data-dtype='String'
          />
        </div>
        <div class='resource'>
          <label class='resource-label'>{{localize "TRINITY_SECOND.SheetLabels.Successes"}}</label>
          <input
            type='text'
            class="text-3digit"
            name='system.successes'
            value='{{system.successes}}'
            data-dtype='Number'
          />
        </div>
      </div>
    </div>
  </header>

  {{! Sheet Tab Navigation }}
  <nav class='sheet-tabs tabs' data-group='primary'>
    <a class='item' data-tab='description'>{{localize "TRINITY_SECOND.SheetLabels.Feature"}}</a>
    <a class='item' data-tab='drawback'>{{localize "TRINITY_SECOND.SheetLabels.Drawback"}}</a>
    <a class='item' data-tab='attributes'>{{localize "TRINITY_SECOND.SheetLabels.Game"}}</a>
  </nav>

  {{! Sheet Body }}
  <section class='sheet-body'>
    {{! Feature Tab }}
    <div class='tab' data-group='primary' data-tab='description'>
      <div class='resource-text'>
        <h3 class=''>{{localize "TRINITY_SECOND.SheetLabels.Action"}}</h3>
        <input
          type='text'
          name='system.action'
          value='{{system.action}}'
          data-dtype='String'
        />
      </div>
      <h3 class="description added-segment">{{localize "TRINITY_SECOND.SheetLabels.Feature"}}</h3>
      {{! Editors must receive enriched text data from getData to properly handle rolls }}
      {{editor
        enrichedDescription
        target='system.feature'
        engine='prosemirror'
        button=true
        editable=editable
      }}
    </div>
    

    {{! Drawback Tab }}
    <div class='tab' data-group='primary' data-tab='drawback'>
      <h3 class="description">{{localize "TRINITY_SECOND.SheetLabels.Drawback"}}</h3>
      {{! Editors must receive enriched text data from getData to properly handle rolls }}
      {{editor
        enrichedDescription
        target='system.drawback'
        engine='prosemirror'
        button=true
        editable=editable
      }}
    </div>

    {{! Attributes Tab }}
    <div class='tab attributes' data-group='primary' data-tab='attributes'>
      {{! As you add new fields, add them in here! }}
      {{> "systems/trinity-2e/templates/item/parts/item-attributes.hbs"}}
    </div>
  </section>
</form>