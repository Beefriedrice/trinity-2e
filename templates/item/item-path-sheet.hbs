<form class='{{cssClass}}' autocomplete='off'>
  <header class='sheet-header'>
    <img
      class='profile-img'
      src='{{item.img}}'
      data-edit='img'
      title='{{item.name}}'
    />
    <div class='header-fields'>
      <h1 class='charname'><input
          name='name'
          type='text'
          value='{{item.name}}'
          placeholder='Name'
        /></h1>
      <div class='grid grid-2col'>
        <div class='resource'>
          <label class='resource-label'>{{localize "TC.SheetLabels.Currentrating"}}</label>
          <input
            type='text'
            class="text-2digit"
            name='system.rating.value'
            value='{{system.rating.value}}'
            data-dtype='Number'
          />
        </div>
        <div class='resource'>
          <label class='resource-label'>{{localize "TC.SheetLabels.Rating"}}</label>
          <input
            type='text'
            class="text-2digit"
            name='system.rating.max'
            value='{{system.rating.max}}'
            data-dtype='Number'
          />
        </div>
        <div class='resource'>
          <label class='resource-label'>{{localize "TC.SheetLabels.Revoked"}}</label>    
          {{#if system.revoked}}
            <input type="checkbox" name="system.revoked" value="true" checked>
          {{else}}
            <input type="checkbox" name="system.revoked" value="false">
          {{/if}}
        </div>
        <div class='resource'>
          <label class='resource-label'>{{localize "TC.SheetLabels.Suspended"}}</label>    
          {{#if system.suspended}}
            <input type="checkbox" name="system.suspended" value="true" checked>
          {{else}}
            <input type="checkbox" name="system.suspended" value="false">
          {{/if}}
        </div>
        <div class='resource-text'>
          <label class='resource-label'>{{localize "TC.SheetLabels.Pathtype"}}</label>
          <input
            type='text'
            name='system.type'
            list='path-types'
            value='{{system.type}}'
            data-dtype='String'
          />
          <datalist id="path-types">
            <option value="Origin">{{localize "TC.SheetLabels.Origin"}}</option>
            <option value="Role">{{localize "TC.SheetLabels.Role"}}</option>
            <option value="Society">{{localize "TC.SheetLabels.Society"}}</option>
            <option value="Additional Path 1">{{localize "TC.SheetLabels.Additional1"}}</option>
            <option value="Additional Path 2">{{localize "TC.SheetLabels.Additional2"}}</option>
          </datalist>
        </div>
        <div class='resource-text'>
          <label class='resource-label'>{{localize "TC.SheetLabels.Community"}}</label>
          <input
            type='text'
            name='system.community'
            value='{{system.community}}'
            data-dtype='String'
          />
        </div>
        <div class='resource-text'>
          <label class='resource-label'>{{localize "TC.SheetLabels.Access"}}</label>
          <input
            type='text'
            name='system.access'
            value='{{system.access}}'
            data-dtype='String'
          />
        </div>
      </div>
    </div>
  </header>

  {{! Sheet Tab Navigation }}
  <nav class='sheet-tabs tabs' data-group='primary'>
    <a class='item' data-tab='description'>{{localize "TC.SheetLabels.Description"}}</a>
    <a class='item' data-tab='options'>{{localize "TC.SheetLabels.Options"}}</a>
    <a class='item' data-tab='attributes'>{{localize "TC.SheetLabels.Game"}}</a>
  </nav>

  {{! Sheet Body }}
  <section class='sheet-body'>
    {{! Description Tab }}
    <div class='tab' data-group='primary' data-tab='description'>
      <h3 class="description">{{localize "TC.SheetLabels.Description"}}</h3>
      {{! Editors must receive enriched text data from getData to properly handle rolls }}
      {{editor
        enrichedDescription
        target='system.description'
        engine='prosemirror'
        button=true
        editable=editable
      }}
    </div>

    {{! Options Tab }}
    <div class='tab' data-group='primary' data-tab='options'>
      <h3>{{localize "TC.SheetLabels.Skills"}}</h3>
      <div class='resource-text'>
        <input
          type='text'
          name='system.skills'
          value='{{system.skills}}'
          data-dtype='String'
        />
      </div>
      <h3 class="added-segment">{{localize "TC.SheetLabels.Edges"}}</h3>
      <div class='resource'>
        <input
          type='text'
          name='system.edges'
          value='{{system.edges}}'
          data-dtype='String'
        />
      </div>
    </div>

    {{! Attributes Tab }}
    <div class='tab attributes' data-group='primary' data-tab='attributes'>
      {{! As you add new fields, add them in here! }}
        {{> "systems/trinity-continuum/templates/item/parts/item-attributes.hbs"}}
    </div>
  </section>
</form>