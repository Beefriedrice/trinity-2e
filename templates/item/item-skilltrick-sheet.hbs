<form class='{{cssClass}}' autocomplete='off'>
  <header class='sheet-header'>
    <img
      class='profile-img'
      src='{{item.img}}'
      data-edit='img'
      title='{{item.name}}'
    />
    <div class='header-fields'>
      <h1 class='charname'><input
          name='name'
          type='text'
          value='{{item.name}}'
          placeholder='Name'
        /></h1>
      <div class='grid grid-1col'>
        <div class='resource-text'>
          <label class='resource-label'>Skill</label>
          <input
            type='text'
            name='system.skill'
            value='{{system.skill}}'
            data-dtype='String'
            list='skillslist'
          />
          <datalist id='skillslist'>
              <option value="{{localize 'TRINITY_SECOND.Skill.Aim.long'}}">{{localize 'TRINITY_SECOND.Skill.Aim.long'}}</option>
              <option value="{{localize 'TRINITY_SECOND.Skill.Ath.long'}}">{{localize 'TRINITY_SECOND.Skill.Ath.long'}}</option>
              <option value="{{localize 'TRINITY_SECOND.Skill.Clo.long'}}">{{localize 'TRINITY_SECOND.Skill.Clo.long'}}</option>
              <option value="{{localize 'TRINITY_SECOND.Skill.Com.long'}}">{{localize 'TRINITY_SECOND.Skill.Com.long'}}</option>
              <option value="{{localize 'TRINITY_SECOND.Skill.Cul.long'}}">{{localize 'TRINITY_SECOND.Skill.Cul.long'}}</option>
              <option value="{{localize 'TRINITY_SECOND.Skill.Emp.long'}}">{{localize 'TRINITY_SECOND.Skill.Emp.long'}}</option>
              <option value="{{localize 'TRINITY_SECOND.Skill.Eni.long'}}">{{localize 'TRINITY_SECOND.Skill.Eni.long'}}</option>
              <option value="{{localize 'TRINITY_SECOND.Skill.Hum.long'}}">{{localize 'TRINITY_SECOND.Skill.Hum.long'}}</option>
              <option value="{{localize 'TRINITY_SECOND.Skill.Int.long'}}">{{localize 'TRINITY_SECOND.Skill.Int.long'}}</option>
              <option value="{{localize 'TRINITY_SECOND.Skill.Lar.long'}}">{{localize 'TRINITY_SECOND.Skill.Lar.long'}}</option>
              <option value="{{localize 'TRINITY_SECOND.Skill.Med.long'}}">{{localize 'TRINITY_SECOND.Skill.Med.long'}}</option>
              <option value="{{localize 'TRINITY_SECOND.Skill.Per.long'}}">{{localize 'TRINITY_SECOND.Skill.Per.long'}}</option>
              <option value="{{localize 'TRINITY_SECOND.Skill.Pil.long'}}">{{localize 'TRINITY_SECOND.Skill.Pil.long'}}</option>
              <option value="{{localize 'TRINITY_SECOND.Skill.Sci.long'}}">{{localize 'TRINITY_SECOND.Skill.Sci.long'}}</option>
              <option value="{{localize 'TRINITY_SECOND.Skill.Sur.long'}}">{{localize 'TRINITY_SECOND.Skill.Sur.long'}}</option>
              <option value="{{localize 'TRINITY_SECOND.Skill.Tec.long'}}">{{localize 'TRINITY_SECOND.Skill.Tec.long'}}</option>
          </datalist>
        </div>
      </div>
    </div>
  </header>

  {{! Sheet Tab Navigation }}
  <nav class='sheet-tabs tabs' data-group='primary'>
    <a class='item' data-tab='description'>{{localize "TRINITY_SECOND.SheetLabels.Description"}}</a>
    <a class='item' data-tab='attributes'>{{localize "TRINITY_SECOND.SheetLabels.Game"}}</a>
  </nav>

  {{! Sheet Body }}
  <section class='sheet-body'>

    {{! Description Tab }}
    <div class='tab' data-group='primary' data-tab='description'>
      {{! Editors must receive enriched text data from getData to properly handle rolls }}
      {{editor
        enrichedDescription
        target='system.description'
        engine='prosemirror'
        button=true
        editable=editable
      }}
    </div>

    {{! Attributes Tab }}
    <div class='tab attributes' data-group='primary' data-tab='attributes'>
      {{! As you add new fields, add them in here! }}
      <div class='tab attributes' data-group='primary' data-tab='attributes'>
        {{! As you add new fields, add them in here! }}
        {{> "systems/trinity-2e/templates/item/parts/item-attributes.hbs"}}
      </div>
    </div>
  </section>
</form>