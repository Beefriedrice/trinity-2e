<form class='{{cssClass}}' autocomplete='off'>
  <header class='sheet-header'>
    <img
      class='profile-img'
      src='{{item.img}}'
      data-edit='img'
      title='{{item.name}}'
    />
    <div class='header-fields'>
      <h1 class='charname'><input
          name='name'
          type='text'
          value='{{item.name}}'
          placeholder='Name'
        /></h1>
      <div class='grid grid-2col'>
        <div class='resource'>
          <label class='resource-label'>{{localize "TC.SheetLabels.Enhancement"}}</label>
          <input
            type='text'
            class="text-2digit"
            name='system.enhancement'
            value='{{system.enhancement}}'
            data-dtype='Number'
          />
        </div>
        <div class='resource'>
          <label class='resource-label'>{{localize "TC.Scale.Tecscale"}}</label>
          <input
            type='text'
            class="text-2digit"
            name='system.techscale'
            value='{{system.techscale}}'
            data-dtype='Number'
          />
        </div>
        <div class='resource'>
          <label class='resource-label'>{{localize "TC.SheetLabels.Size"}}</label>
          <input
            type='text'
            class="text-2digit"
            name='system.size'
            value='{{system.size}}'
            data-dtype='Number'
          />
        </div>
        <div class='resource'>
          <label class='resource-label'>{{localize "TC.SheetLabels.Cost"}}</label>
          <input
            type='text'
            class="text-2digit"
            name='system.cost'
            value='{{system.cost}}'
            data-dtype='Number'
          />
        </div>
        <div class='resource-text'>
          <label class='resource-label'>{{localize "TC.SheetLabels.ScienceType"}}</label>
          <input
            type='text'
            name='system.inventiontype'
            value='{{system.inventiontype}}'
            data-dtype='String'
            list='inventiontype'
          />
          <datalist id="inventiontype">
            <option value="{{localize 'TC.Science.Mundane'}}">{{localize 'TC.Science.Mundane'}}</option>
            <option value="{{localize 'TC.Science.Advanced'}}">{{localize 'TC.Science.Advanced'}}</option>
            <option value="{{localize 'TC.Science.Inspired'}}">{{localize 'TC.Science.Inspired'}}</option>
            <option value="{{localize 'TC.Science.Powered'}}">{{localize 'TC.Science.Powered'}}</option>
            <option value="{{localize 'TC.Science.Core'}}">{{localize 'TC.Science.Core'}}</option>
            <option value="{{localize 'TC.Science.Nova'}}">{{localize 'TC.Science.Nova'}}</option>
            <option value="{{localize 'TC.Science.Q'}}">{{localize 'TC.Science.Q'}}</option>
            <option value="{{localize 'TC.Science.Module'}}">{{localize 'TC.Science.Module'}}</option>
            <option value="{{localize 'TC.Science.Artifact'}}">{{localize 'TC.Science.Artifact'}}</option>
            <option value="{{localize 'TC.Science.Enigma'}}">{{localize 'TC.Science.Enigma'}}</option>
            <option value="{{localize 'TC.Science.Aetheric'}}">{{localize 'TC.Science.Aetheric'}}</option>
            <option value="{{localize 'TC.Science.Mystic'}}">{{localize 'TC.Science.Mystic'}}</option>
          </datalist>
        </div>
        <div class='resource-text'>
          <label class='resource-label'>{{localize "TC.SheetLabels.TechCat"}}</label>
          <input
            type='text'
            name='system.category'
            value='{{system.category}}'
            data-dtype='String'
            list='inventioncategory'
          />
          <datalist id="inventioncategory">
            <option value="{{localize 'TC.TechCategory.Device'}}">{{localize 'TC.TechCategory.Device'}}</option>
            <option value="{{localize 'TC.TechCategory.Organism'}}">{{localize 'TC.TechCategory.Organism'}}</option>
            <option value="{{localize 'TC.TechCategory.Compound'}}">{{localize 'TC.TechCategory.Compound'}}</option>
            <option value="{{localize 'TC.TechCategory.Enigma'}}">{{localize 'TC.TechCategory.Enigma'}}</option>
            <option value="{{localize 'TC.TechCategory.Cybernetic'}}">{{localize 'TC.TechCategory.Cybernetic'}}</option>
            <option value="{{localize 'TC.TechCategory.Bioware'}}">{{localize 'TC.TechCategory.Bioware'}}</option>
            <option value="{{localize 'TC.TechCategory.Noetic'}}">{{localize 'TC.TechCategory.Noetic'}}</option>            
          </datalist>
        </div>
      </div>
    </div>
  </header>

  {{! Sheet Tab Navigation }}
  <nav class='sheet-tabs tabs' data-group='primary'>
    <a class='item' data-tab='description'>{{localize "TC.SheetLabels.Description"}}</a>
    <a class='item' data-tab='attributes'>{{localize "TC.SheetLabels.Game"}}</a>
  </nav>

  {{! Sheet Body }}
  <section class='sheet-body'>
    {{! Description Tab }}
    <div class='tab' data-group='primary' data-tab='description'>
      <h3>{{localize "TC.SheetLabels.Tags"}}</h3>
      <div class='resource-text'>
        <input
          type='text'
          name='system.tags'
          value='{{system.tags}}'
          data-dtype='String'
        />
      </div>
      <h3 class="description added-segment">{{localize "TC.SheetLabels.Description"}}</h3>
      {{! Editors must receive enriched text data from getData to properly handle rolls }}
      {{editor
        enrichedDescription
        target='system.description'
        engine='prosemirror'
        button=true
        editable=editable
      }}
    </div>

    {{! Attributes Tab }}
    <div class='tab attributes' data-group='primary' data-tab='attributes'>
      {{! As you add new fields, add them in here! }}
      {{> "systems/trinity-continuum/templates/item/parts/item-attributes.hbs"}}
    </div>
  </section>
</form>