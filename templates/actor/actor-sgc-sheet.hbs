<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <div class="character-main">
        <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
        <div class="header-fields">
            <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
            <input class="charname" name="system.codename" type="text" value="{{system.codename}}" placeholder="Alias"/>        
        </div>
    </div>
    <div class="sgc-header-info grid grid-5col">
        <div class="sgc-number">
            <label class="resource-label sgc-label">{{localize "TC.Labels.Primarypool"}}</label>
            <input class="sgc-input text-2digit" type="number" name="system.primary.value" value="{{system.primary.value}}" data-dtype="Number"/>
        </div>
        <div class="sgc-text grid-span-4">
            <label class="resource-label sgc-label">{{localize "TC.Labels.Primarysuggestions"}}</label><br>
            <input class="sgc-input" type="text" name="system.primary.suggestions" value="{{system.primary.suggestions}}" data-dtype="String"/>
        </div>
        <div class="sgc-number">
            <label class="resource-label sgc-label">{{localize "TC.Labels.Secondarypool"}}</label>
            <input class="sgc-input text-2digit" type="number" name="system.secondary.value" value="{{system.secondary.value}}" data-dtype="Number"/>
        </div>
        <div class="sgc-text grid-span-4">
            <label class="resource-label sgc-label">{{localize "TC.Labels.Secondarysuggestions"}}</label><br>
            <input class="sgc-input" type="text" name="system.secondary.suggestions" value="{{system.secondary.suggestions}}" data-dtype="String"/>
        </div>
        <div class="sgc-number">
            <label class="resource-label sgc-label">{{localize "TC.Labels.Desperationpool"}}</label>
            <input class="sgc-input text-2digit" type="number" name="system.desperation.value" value="{{system.desperation.value}}" data-dtype="Number"/>
        </div>
        <div class="sgc-number">
            <label class="resource-label sgc-label">{{localize "TC.Labels.Enhancement"}}</label>
            <input class="sgc-input text-2digit" type="number" name="system.enhancement" value="{{system.enhancement}}" data-dtype="Number"/>
        </div>
        <div class="sgc-number">
            <label class="resource-label sgc-label">{{localize "TC.Labels.Defense"}}</label>
            <input class="sgc-input text-2digit" type="number" name="system.defense" value="{{system.defense}}" data-dtype="Number"/>
        </div>
        <div class="sgc-number">
            <label class="resource-label sgc-label">{{localize "TC.Labels.Health"}}</label>
            <div>
                <input class="sgc-input text-2digit" type="number" name="system.health.total.value" value="{{system.health.total.value}}" data-dtype="Number"/>
                <span class="math-label"> / </span>
                <input class="sgc-input text-2digit" type="number" name="system.health.total.max" value="{{system.health.total.max}}" data-dtype="Number"/>
            </div>
        </div>
        <div class="sgc-number">
            <label class="resource-label sgc-label">{{localize "TC.Labels.Source"}}</label>
            <input class="sgc-input text-2digit" type="number" name="system.source" value="{{system.source}}" data-dtype="Number"/>
        </div>   
    </div>
  </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="sgc">
        {{!-- Default tab is specified in actor-sheet.mjs --}}
            <a class="item" data-tab="stats">{{localize "TC.Labels.Powers"}}</a>
            <a class="item" data-tab="edges">{{localize "TC.Labels.Edges"}}</a>
            <a class="item" data-tab="background">{{localize "TC.Labels.Background"}}</a>
    </nav>

    {{!-- Sheet Body --}}  
    <section class="sheet-body">

        {{!-- Powers Tab --}}
        <div class="tab stats" data-group="sgc" data-tab="stats">
            <ol class='items-list'>
            <li class='item flexrow items-header sgc-powers-header'>
                <div class='item-name'>{{localize "TC.Labels.Powers"}}</div>
                <div class='power-controls'>
                <a
                    class='item-control item-create'
                    title='{{localize "DOCUMENT.Create" type='anomaly'}}'
                    data-type='anomaly'
                >
                    <i class='fas fa-plus'></i>
                    {{localize 'DOCUMENT.New' type='Anomaly'}}
                </a>
                </div>
                <div class='power-controls'>
                <a
                    class='item-control item-create'
                    title='{{localize "DOCUMENT.Create" type='gift'}}'
                    data-type='gift'
                >
                    <i class='fas fa-plus'></i>
                    {{localize 'DOCUMENT.New' type='Gift'}}
                </a>
                </div>
                <div class='power-controls'>
                <a
                    class='item-control item-create'
                    title='{{localize "DOCUMENT.Create" type='skilltrick'}}'
                    data-type='skilltrick'
                >
                    <i class='fas fa-plus'></i>
                    {{localize 'DOCUMENT.New' type='Skill Trick'}}
                </a>
                </div>
                <div class='power-controls'>
                <a
                    class='item-control item-create'
                    title='{{localize "DOCUMENT.Create" type='megaedge'}}'
                    data-type='megaedge'
                >
                    <i class='fas fa-plus'></i>
                    {{localize 'DOCUMENT.New' type='Mega-Edge'}}
                </a>
                </div>
                <div class='power-controls'>
                <a
                    class='item-control item-create'
                    title='{{localize "DOCUMENT.Create" type='quantumpower'}}'
                    data-type='quantumpower'
                >
                    <i class='fas fa-plus'></i>
                    {{localize 'DOCUMENT.New' type='Quantum Power'}}
                </a>
                </div>
            </li>
            {{#each power as |item id|}}
                {{> 'systems/trinity-continuum/templates/actor/parts/actor-basiclistitem.hbs' item=item}}
            {{/each}}
            </ol>    
        </div>

        {{!-- Edge Section --}}
        <div class="tab edges" data-group="sgc" data-tab="edges">
            <ol class='items-list'>
            <li class='item flexrow items-header'>
                <div class='item-name'>{{localize "TYPES.Item.edge"}}</div>
                <div class='item-category'>{{localize 'TC.Labels.Category'}}</div>
                <div class='item-rating'>{{localize 'TC.Labels.Rating'}}</div>
                <div class='item-formula'>{{localize 'Roll Formula'}}</div>
                <div class='item-controls'>
                <a
                    class='item-control item-create'
                    title='{{localize "DOCUMENT.Create" type='Edge'}}'
                    data-type='edge'
                >
                    <i class='fas fa-plus'></i>
                    {{localize 'DOCUMENT.New' type='edge'}}
                </a>
                </div>
            </li>
            {{#each edge as |item id|}}
                <li class='item flexrow' data-item-id='{{item._id}}'>
                <div class='item-name'>
                    <div class='item-image'>
                    <a class='rollable' data-roll-type='item'>
                        <img
                        src='{{item.img}}'
                        title='{{item.name}}'
                        width='24'
                        height='24'
                        />
                    </a>
                    </div>
                    <h4>{{item.name}}</h4>
                </div>
                <div class="item-category">{{item.system.category}}</div>
                <div class="item-rating">{{item.system.rating}}</div>
                <div class='item-formula item-prop'>{{item.system.formula}}</div>
                <div class='item-controls'>
                    <a
                    class='item-control item-edit'
                    title='{{localize "DOCUMENT.Update" type='edge'}}'
                    >
                    <i class='fas fa-edit'></i>
                    </a>
                    <a
                    class='item-control item-delete'
                    title='{{localize "DOCUMENT.Delete" type='edge'}}'
                    >
                    <i class='fas fa-trash'></i>
                    </a>
                </div>
                </li>
            {{/each}}
            </ol>            
        </div>

        {{!-- Background Section --}}
        <div class="tab background" data-group="sgc" data-tab="background">
            <div class="sgc-header-info grid grid-2col">
                <div class="sgc-text">
                    <label class="resource-label sgc-label">Type</label><br>
                    <input class="sgc-input" type="text" name="system.type" value="{{system.type}}" data-dtype="String"/>
                </div>
                <div class="sgc-text">
                    <label class="resource-label sgc-label">Concept</label><br>
                    <input class="sgc-input" type="text" name="system.concept" value="{{system.concept}}" data-dtype="String"/>
                </div>
            </div>
            <div class="grid-span-2">
                {{editor system.templates.biography target="system.templates.biography" engine="prosemirror" button=false editable=true}}
            </div>
        </div>

    </section>
</form>
