<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
      <input class="charname" name="system.codename" type="text" value="{{system.codename}}" placeholder="Alias"/>
      <div class="resource-section">
        
        {{!-- Source(Quantum) and Nova Unique traits --}}
        <section class="source-section">
            <div class="flex-group-center">
                <h3 class="nova-header">{{localize "TRINITY_SECOND.SheetLabels.Novatrait"}}</h3>
            </div>
            <div class="source-column">
                <div class="source-row">
                    <div class="flexrow valign-center source-col1">
                        <label class="source-label source-element" for="system.traits.quantum.value">Quantum</label>
                        <input class="text-2digit source-element" type="text" name="system.traits.quantum.value" value="{{system.traits.quantum.value}}" data-dtype="Number"/>
                    </div>
                    <div class="flexrow valign-center source-col2">
                        <label class="source-label source-element" for="system.traits.quantumpoints.value">Quantum Points</label>
                        <input class="text-2digit source-element" type="text" name="system.traits.quantumpoints.value" value="{{system.traits.quantumpoints.value}}" data-dtype="Number"/>
                        <span class="math-label source-element"> / </span>
                        <input class="text-2digit source-element" size="4" type="text" name="system.traits.quantumpoints.max" value="{{system.traits.quantumpoints.max}}" data-dtype="Number" readonly/>
                    </div>
                </div>
            </div>
        </section>
      </div>
    </div>
  </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        {{!-- Default tab is specified in actor-sheet.mjs --}}
        <a class="item" data-tab="stats">Core Mechanics</a>
        <a class="item" data-tab="powers">Special Abilities</a>
        <a class="item" data-tab="equipment">Gear</a>
        <a class="item" data-tab="effects">Status</a>
        <a class="item" data-tab="background">Background</a>
    </nav>

    {{!-- Sheet Body --}}  
    <section class="sheet-body">

        {{!-- Core Mechanics Tab --}}
        <div class="tab stats" data-group="primary" data-tab="stats">
            <nav class="attribute-sheet-tabs sheet-tabs tabs" data-group="attributes">
                {{!-- Default tab is specified in actor-sheet.mjs --}}
                <a class="item" data-tab="attributes">Attributes & Skills</a>
                <a class="item" data-tab="specialties">Specialties</a>
                <a class="item" data-tab="edges">Edges</a>
                <a class="item" data-tab="scale">Scale</a>
            </nav>
            <div class="attribute-sheet-body">
                {{> "systems/trinity-2e/templates/actor/parts/actor-attributes.hbs"}}      
            </div>
        </div>

        {{!-- Background Tab --}}
        
        <div class="tab background" data-group="primary" data-tab="background">
            <nav class="background-sheet-tabs sheet-tabs tabs" data-group="backgrounds">
                {{!-- Default tab is specified in actor-sheet.mjs --}}
                <a class="item" data-tab="paths">Paths & Contacts</a>
                <a class="item" data-tab="background">Background</a>
                <a class="item" data-tab="bonds">Bonds</a>
            </nav>
            <div class="background-sheet-body">
                <div class="tab paths" data-group="backgrounds" data-tab="paths">
                    {{> "systems/trinity-2e/templates/actor/parts/actor-paths.hbs"}}      
                </div>
                <div class="tab background" data-group="backgrounds" data-tab="background">
                    {{> "systems/trinity-2e/templates/actor/parts/actor-background.hbs"}}
                </div>
                <div class="tab bonds" data-group="backgrounds" data-tab="bonds">
                    {{> "systems/trinity-2e/templates/actor/parts/actor-bonds.hbs"}}
                </div>
            </div>
        
        </div>

        {{!-- Owned Powers Tab --}}
        <div class="tab powers" data-group="primary" data-tab="powers">
            {{!-- Default tab is specified in actor-sheet.mjs --}}
            <nav class="power-sheet-tabs sheet-tabs tabs" data-group="powers">
                <a class="item" data-tab="qpowers">Quantum Powers</a>
                <a class="item" data-tab="megaedges">Mega Edges</a>
                <a class="item" data-tab="skilltricks">Skill Tricks</a>
                <a class="item" data-tab="transformations">Transcendence</a>
                <a class="item" data-tab="options">Options</a>
            </nav>
            <div class="power-sheet-body">
                {{> "systems/trinity-2e/templates/actor/parts/actor-powers.hbs"}}
            </div>
        </div>

        {{!-- Owned Equipment Tab --}}
        <div class="tab equipment" data-group="primary" data-tab="equipment">
            <nav class="gear-sheet-tabs sheet-tabs tabs" data-group="gear">
                {{!-- Default tab is specified in actor-sheet.mjs --}}
                <a class="item" data-tab="weapons">Weapons</a>
                <a class="item" data-tab="armor">Armor</a>
                <a class="item" data-tab="vehicles">Vehicles</a>
                <a class="item" data-tab="other">Other Items</a>
            </nav>
            <div class="gear-sheet-body">
                {{> "systems/trinity-2e/templates/actor/parts/actor-equipment.hbs"}}
            </div>
        </div>

        {{!-- Active Effects Tab --}}
        <div class="tab effects" data-group="primary" data-tab="effects">
            <nav class="status-sheet-tabs sheet-tabs tabs" data-group="status">
                {{!-- Default tab is specified in actor-sheet.mjs --}}
                <a class="item" data-tab="health">Health</a>
                <a class="item" data-tab="status">Status Conditions</a>
                <a class="item" data-tab="effects">Effects</a>
            </nav>
            <div class="status-sheet-body">
                {{> "systems/trinity-2e/templates/actor/parts/actor-effects.hbs"}}
            </div>
        </div>
    </section>
</form>
