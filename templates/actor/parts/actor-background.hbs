{{!-- Background Sub-Navigation --}}
<nav class="background-sheet-tabs sheet-tabs tabs" data-group="backgrounds">
    <a class="item" data-tab="paths">{{localize "TC.Labels.Paths"}} & {{localize "TC.Labels.Contacts"}}</a>
    <a class="item" data-tab="background">{{localize "TC.Labels.Background"}}</a>
    <a class="item" data-tab="bonds">{{localize "TC.Labels.Bonds"}}</a>
</nav>

{{!-- Background Section --}}
<div class="background-sheet-body">

    {{!-- Path + Contact Sub-Section --}}
    <div class="tab paths" data-group="backgrounds" data-tab="paths">
        {{!-- Paths --}}
        <ol class='items-list'>
        <li class='item flexrow items-header'>
            <div class='item-name'>{{localize "TYPES.Item.path"}}</div>
            <div class='item-prating'>{{localize 'TC.Labels.Rating'}}</div>
            <div class='item-ptype'>{{localize 'TC.Labels.Pathtype'}}</div>
            <div class='item-suspended'>{{localize 'TC.Labels.Revoked'}}</div>
            <div class='item-suspended'>{{localize 'TC.Labels.Suspended'}}</div>
            <div class='item-controls'>
            <a
                class='item-control item-create'
                title='{{localize "DOCUMENT.Create" type='Path'}}'
                data-type='path'
            >
                <i class='fas fa-plus'></i>
                {{localize 'DOCUMENT.New' type=''}}
            </a>
            </div>
        </li>
        {{#each path as |item id|}}
            <li class='item flexrow' data-item-id='{{item._id}}'>
            <div class='item-name'>
                <div class='item-image'>
                <a class='rollable' data-roll-type='item'>
                    <img
                    src='{{item.img}}'
                    title='{{item.name}}'
                    width='24'
                    height='24'
                    />
                </a>
                </div>
                <h4>{{item.name}}</h4>
            </div>
            <div class='item-prating'>{{item.system.rating.value}} / {{item.system.rating.max}}</div>
            <div class='item-ptype'>{{item.system.type}}</div>
            <div class='item-suspended'>{{#if item.system.revoked}}Yes{{else}}No{{/if}}</div>
            <div class='item-suspended'>{{#if item.system.suspended}}Yes{{else}}No{{/if}}</div>
            <div class='item-controls'>
                <a
                class='item-control item-edit'
                title='{{localize "DOCUMENT.Update" type='Item'}}'
                >
                <i class='fas fa-edit'></i>
                </a>
                <a
                class='item-control item-delete'
                title='{{localize "DOCUMENT.Delete" type='Item'}}'
                >
                <i class='fas fa-trash'></i>
                </a>
            </div>
            </li>
        {{/each}}
        </ol>

        {{!-- Contacts --}}
        <ol class='items-list added-segment'>
        <li class='item flexrow items-header'>
            <div class='item-name'>{{localize "TYPES.Item.contact"}}</div>
            <div class='item-prating'>{{localize 'TC.Labels.Rating'}}</div>
            <div class='item-path'>{{localize 'TC.Labels.Path'}}</div>
            <div class='item-tags-short'>{{localize 'TC.Labels.Tags'}}</div>
            <div class='item-controls'>
            <a
                class='item-control item-create'
                title='{{localize "DOCUMENT.Create" type='Contact'}}'
                data-type='contact'
            >
                <i class='fas fa-plus'></i>
                {{localize 'DOCUMENT.New' type=''}}
            </a>
            </div>
        </li>
        {{#each contact as |item id|}}
            <li class='item flexrow' data-item-id='{{item._id}}'>
            <div class='item-name'>
                <div class='item-image'>
                <a class='rollable' data-roll-type='item'>
                    <img
                    src='{{item.img}}'
                    title='{{item.name}}'
                    width='24'
                    height='24'
                    />
                </a>
                </div>
                <h4>{{item.name}}</h4>
            </div>
            <div class='item-prating'>{{item.system.rating.value}} / {{item.system.rating.max}}</div>
            <div class='item-path'>{{item.system.path}}</div>
            <div class='item-tags-short'>{{item.system.tags}}</div>
            <div class='item-controls'>
                <a
                class='item-control item-edit'
                title='{{localize "DOCUMENT.Update" type='Item'}}'
                >
                <i class='fas fa-edit'></i>
                </a>
                <a
                class='item-control item-delete'
                title='{{localize "DOCUMENT.Delete" type='Item'}}'
                >
                <i class='fas fa-trash'></i>
                </a>
            </div>
            </li>
        {{/each}}
        </ol>
    </div>


    {{!-- Background Sub-Section --}}
    <div class="tab background" data-group="backgrounds" data-tab="background">
            <div class="stat-detail-row">
                <div class="resource-label">{{localize "TC.Labels.Xpspent"}}</div>
                <input class="text-3digit" type=text name="system.experience.spent" value="{{system.experience.spent}}"/>
                <div class="resource-label">{{localize "TC.Labels.Xpremaining"}}</div>
                <input class="text-3digit" type=text name="system.experience.current" value="{{system.experience.current}}" readonly/>
                <div class="resource-label">{{localize "TC.Labels.Xptotal"}}</div>
                <input class="text-3digit" type=text name="system.experience.total" value="{{system.experience.total}}"/>
            </div>
            <h3 class="style-header added-segment">{{localize "TC.Labels.Characterbackground"}}</h3>
            <div>
                <label class="" for"system.templates.concept">{{localize "TC.Labels.Concept"}}</label>
                <input class="" type="text" name="system.templates.concept" value="{{system.templates.concept}}" data-dtype="String"/>
            </div>
            <div class="">
                <label class="" for"system.templates.momentofinsp">{{localize "TC.Labels.Momentofinsp"}}</label>
                <input class="" type="text" name="system.templates.momentofinsp" value="{{system.templates.momentofinsp}}" data-dtype="String"/>
            </div>
            <div class="">
                <label class="" for"system.templates.biography">{{localize "TC.Labels.Biography"}}</label>
                <textarea class="" rows="10" name="system.templates.biography" data-dtype="String"/>{{system.templates.biography}}</textarea>
            </div>
            <div class="">
                <label class="" for"system.templates.aspirations">{{localize "TC.Labels.Aspirations"}}</label>
                <textarea class="" rows="10" name="system.templates.aspirations" data-dtype="String"/>{{system.templates.aspirations}}</textarea>
            </div>
    </div>

    {{!-- Bonds Sub-Section --}}
    <div class="tab bonds" data-group="backgrounds" data-tab="bonds">
        <ol class='items-list'>
        <li class='item flexrow items-header'>
            <div class='item-name'>{{localize "TYPES.Item.bond"}}</div>
            <div class='item-person'>{{localize 'TC.Labels.Assocperson'}}</div>
            <div class='item-successes'>{{localize 'TC.Labels.Successes'}}</div>
            <div class='item-duration'>{{localize 'TC.Labels.Duration'}}</div>
            <div class='item-formula'>{{localize 'Roll Formula'}}</div>
            <div class='item-controls'>
            <a
                class='item-control item-create'
                title='{{localize "DOCUMENT.Create" type='Bond'}}'
                data-type='bond'
            >
                <i class='fas fa-plus'></i>
                {{localize 'DOCUMENT.New' type=''}}
            </a>
            </div>
        </li>
        {{#each bond as |item id|}}
            <li class='item flexrow' data-item-id='{{item._id}}'>
            <div class='item-name'>
                <div class='item-image'>
                <a class='rollable' data-roll-type='Bond'>
                    <img
                    src='{{item.img}}'
                    title='{{item.name}}'
                    width='24'
                    height='24'
                    />
                </a>
                </div>
                <h4>{{item.name}}</h4>
            </div>
            <div class='item-person'>{{item.system.person}}</div>
            <div class='item-successes'>{{item.system.successes}}</div>
            <div class='item-duration'>{{item.system.duration}}</div>
            <div class='item-formula item-prop'>{{item.system.formula}}</div>
            <div class='item-controls'>
                <a
                class='item-control item-edit'
                title='{{localize "DOCUMENT.Update" type='Item'}}'
                >
                <i class='fas fa-edit'></i>
                </a>
                <a
                class='item-control item-delete'
                title='{{localize "DOCUMENT.Delete" type='Item'}}'
                >
                <i class='fas fa-trash'></i>
                </a>
            </div>
            </li>
        {{/each}}
        </ol>
    </div> 
</div>