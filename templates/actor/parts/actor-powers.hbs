<div class="setting-button">Settings</div>
<div class="power-settings">
  <input type="text" name="system.powersuites.one" value="{{system.powersuites.one}}" data-dtype="Text"><br>
  <input type="text" name="system.powersuites.two" value="{{system.powersuites.two}}" data-dtype="Text"><br>
  <input type="text" name="system.powersuites.three" value="{{system.powersuites.three}}" data-dtype="Text"><br>
  <input type="text" name="system.powersuites.none" value="{{system.powersuites.none}}" data-dtype="Text"><br>
</div>
{{#each quantumpower as |quantumpower suite|}}
  <ol class='items-list'>
    <li class='item flexrow items-header'>
      <div class='item-name'>
        {{!--I couldn't figure out how to make handlebars work with an array --}}
        {{#if (eq suite '0')}}
          {{@root.system.powersuites.one}}
        {{/if}}
        {{#if (eq suite '1')}}
          {{@root.system.powersuites.two}}
        {{/if}}
        {{#if (eq suite '2')}}
          {{@root.system.powersuites.three}}
        {{/if}}
        {{#if (eq suite '3')}}
          {{@root.system.powersuites.none}}
        {{/if}}
      </div>
      <div class='item-controls'>
        <a
          class='item-control item-create'
          title='{{localize "DOCUMENT.Create" type='Quantumpower'}}'
          data-type='quantumpower'
          data-spell-level='{{suite}}'
        >
          <i class='fas fa-plus'></i>
          {{localize 'DOCUMENT.New' type=''}}
        </a>
      </div>
    </li>
    {{#each quantumpower as |item id|}}
      <li class='item flexrow' data-item-id='{{item._id}}'>
        <div class='item-name flexrow'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'><img
                src='{{item.img}}'
                title='{{item.name}}'
                width='24'
                height='24'
              /></a>
          </div>
          <h4>{{item.name}}</h4>
        </div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Edit" type='quantumpower'}}'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
            title='{{localize "DOCUMENT.Delete" type='quantumpower'}}'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
    {{/each}}
  </ol>    
{{/each}}
