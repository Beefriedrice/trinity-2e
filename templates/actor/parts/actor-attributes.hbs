{{!-- Scale Section --}}
<div class="tab scale" data-group="attributes" data-tab="scale">
    <h2 class="flex-group-center nova-header">{{localize "TRINITY_SECOND.SheetLabels.Scale"}}</h2>
    <div class="scale grid grid-4col">
        {{#each system.scale as |scale key|}}
            <div class="scale-cell">
                <label class="source-label source-element" for="system.scale.{{key}}.value">{{localize (lookup @root.config.scale key)}}</label>
                <input class="text-2digit source-element" type="text" name="system.scale.{{key}}.value" value="{{scale.value}}" data-dtype="Number"/>
            </div>
        {{/each}}
    </div>
    <h3 class="added-segment">{{localize "TRINITY_SECOND.SheetLabels.Circumstantialmod"}}</h3>
    <div class="scale">
        <textarea class="scale-mods" rows="10" name="system.templates.scalemodifiers" data-dtype="String">{{system.templates.scalemodifiers}}</textarea>
    </div>
</div>