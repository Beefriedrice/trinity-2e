<div class="tab attributes" data-group="attributes" data-tab="attributes">
    {{!-- Attribute Section --}}
    <h2 class="flex-group-center nova-header">{{localize "TRINITY_SECOND.SheetLabels.Attributes"}}</h2>
    <section class="">
        {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
        use both the "grid" and "grid-Ncol" class where "N" can be any number
        from 1 to 12 and will create that number of columns.  --}}
        <div class="flex-group-center attribute-header">
            <div class="approach"></div>
            <div class="attribute"><h3>{{localize "TRINITY_SECOND.SheetLabels.Mental"}}</h3></div>
            <div class="attribute"><h3>{{localize "TRINITY_SECOND.SheetLabels.Physical"}}</h3></div>
            <div class="attribute"><h3>{{localize "TRINITY_SECOND.SheetLabels.Social"}}</h3></div>
        {{#each system.attributes as |attribute key|}}
            {{#if (or (eq @index 0) (eq @index 3) (eq @index 6))}}
        </div>
        <div class="valign-center attribute-row">
            <div class="approach valign-center">
                <input class="radio-to-check" type="radio" name="system.favoredapproach" value="{{attribute.approach}}"
                {{#if (eq attribute.approach @root.system.favoredapproach)}}
                checked
                {{/if}}/> 
                <label class="approach-label"> {{attribute.approach}}</label>
            </div>
            {{/if}}
            <div class="attribute">
                <div class="flexrow valign-center">
                    <label class="resource-label flex-left" for="system.attributes.{{key}}.value" data-attribute="@attributes.{{key}}.value" data-roll="(@attributes.{{key}}.value)d10x=10cs>=8" data-label="{{localize (lookup @root.config.attributes key)}}">{{localize (lookup @root.config.attributes key)}}</label>
                    <input class="text-2digit" type="number" name="system.attributes.{{key}}.value" value="{{attribute.value}}" min="0" max="10" data-dtype="Number"/>
                </div>
                {{#if (eq @root.document.type 'nova')}}
                <div class="flexrow valign-center">
                    <label class="resource-label" for="system.attributes.{{key}}.mega.value" data-roll="(@attributes.{{key}}.mega.value)d10x=10cs>=8" data-label="{{localize (lookup @root.config.megaattributes key)}}">{{localize (lookup @root.config.megaattributes key)}}</label>
                    <input class="text-2digit" type="number" name="system.attributes.{{key}}.mega.value" value="{{attribute.mega.value}}" min="0" max="10" data-dtype="Number"/>
                </div>
                {{/if}}
            </div>
        {{/each}}
        </div>
    </section>

    {{!-- Skill Section --}}
    <h2 class="flex-group-center nova-header">{{localize "TRINITY_SECOND.SheetLabels.Skills"}}</h2>
    <section class="grid grid-4col">
        {{#each system.skills as |skill key|}}
            <div class="skill flexrow flex-group-center" data-skill="{{key}}">
                <label class="skill-label resource-label flexlarge align-left" for="system.skills.{{key}}.value" data-skill="@skills.{{key}}.value" data-roll="(@skills.{{key}}.value)d10x=10cs>=8" data-label="{{localize (lookup @root.config.skills key)}}">{{localize (lookup @root.config.skills key)}}</label>
                <input class="text-2digit" type="number" name="system.skills.{{key}}.value" value="{{skill.value}}" data-dtype="Number"/>
            </div>
        {{/each}}
    </section>
</div>

{{!-- Specialties Section --}}
<div class="tab specialties" data-group="attributes" data-tab="specialties">
    <ol class='items-list'>
    <li class='item flexrow items-header'>
        <div class='item-name'>{{localize "TYPES.Item.specialty"}}</div>
        <div class='item-skill'>{{localize 'TRINITY_SECOND.SheetLabels.Skill'}}</div>
        <div class='item-rating'>{{localize 'TRINITY_SECOND.SheetLabels.Rating'}}</div>
        <div class='item-formula'>{{localize 'Roll Formula'}}</div>
        <div class='item-controls'>
        <a
            class='item-control item-create'
            title='{{localize "DOCUMENT.Create" type='Specialty'}}'
            data-type='specialty'
        >
            <i class='fas fa-plus'></i>
            {{localize 'DOCUMENT.New' type=''}}
        </a>
        </div>
    </li>
    {{#each specialty as |item id|}}
        <li class='item flexrow' data-item-id='{{item._id}}'>
        <div class='item-name'>
            <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
                <img
                src='{{item.img}}'
                title='{{item.name}}'
                width='24'
                height='24'
                />
            </a>
            </div>
            <h4>{{item.name}}</h4>
        </div>
        <div class='item-skill'>{{item.system.skill}}</div>
        <div class='item-rating'>{{item.system.rating}}</div>
        <div class='item-formula item-prop'>{{item.system.formula}}</div>
        <div class='item-controls'>
            <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Update" type='specialty'}}'
            >
            <i class='fas fa-edit'></i>
            </a>
            <a
            class='item-control item-delete'
            title='{{localize "DOCUMENT.Delete" type='specialty'}}'
            >
            <i class='fas fa-trash'></i>
            </a>
        </div>
        </li>
    {{/each}}
    </ol>
</div>


